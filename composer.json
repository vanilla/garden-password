	"type": "library",
	"keywords": ["vanilla", "garden", "password", "vanilla forums", "php"],
	"license": "MIT",
	"authors": [
		{ "name": "Todd Burry", "email": "todd@vanillaforums.com", "role": "developer" },
		{ "name": "Tim Gunter", "email": "tim@vanillaforums.com", "role": "developer" }
	],
	"require": {
		"php": ">=7.4.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0"
	},
	"suggest": {
